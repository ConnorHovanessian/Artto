<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Sign Up!</h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/register"  method="POST" onsubmit="return validate();">
                <div class="form-group">
                    <input required pattern="[a-zA-Z0-9_]{4,12}" title="4-12 alphanumeric characters with underscores"class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <input required class="form-control" type="email" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <input required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,20}" title="6-20 characters with at least one lowercase letter, uppercase letter, and number." class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <input required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,20}" title="6-20 characters with at least one lowercase letter, uppercase letter, and number." class="form-control" type="password" name="password_confirmation" placeholder="confirm password">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>

<script type="text/javascript">

  function checkPassword(str) 
  {
    //Between 6 and 20 characters, at least one lower case character, one upper case character, and one digit
    var re = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,20}$/; 
    return re.test(str);
  }

  function validate(form)
  {
    console.log("Entering Checkform");
    
    if(form.username.length<4||form.username.length>12))
    {
      alert("Username must be between 4 and 12 characters.");
      form.username.focus();
      return false;
    }
    re = /^\w+$/;
    else if(!re.test(form.username.value))
    {
      alert("Username must contain only letters, numbers and underscores!");
      form.username.focus();
      return false;
    }
    else if(form.password.value != "" && form.password.value == form.password_confirmation.value) {
      if(!checkPassword(form.password.value)) {
        alert("Your password must be between 6 and 20 characters and contain at least one lower case character, one upper case character, and one digit!");
        form.password.focus();
        return false;
    } } 
    return false;
  }

</script>

