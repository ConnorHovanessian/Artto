<% include partials/header %>


<div class="container">
    
    <h1>WELCOME HOME!!</h1>

    <hr>

    <% if(typeof submission !== 'undefined'){ %>

        <div class="row">
            <div class="col-xs-12">
                <h2><strong>Congratulations, your submission "<%= submission.title %> was selected!</strong></h2>
                <a href="/sell/<%= currentUser._id %>/<%= currentUser.sellToken %>" class="btn btn-success">Sell Submission</a>
                <a href="/keep/<%= currentUser._id %>/<%= currentUser.sellToken %>" class="btn btn-warning">Keep Submission</a>
                <p>Download submission:</p>
                <a href="/hofContenders/<%= submission._id %>.png" download="<%= submission.title %>.png"><img src="/hofContenders/<%= submission._id %>.png" class="img-responsive" style="max-height: 100px"></a>
            </div>
        </div>
        
    <% } %>
 
    <hr>
    
    <h3>State of previous selections:</h3>
    
    <% if(prevState === "NONE"){ %>
    
        <p>No selection state to display, be the first to have your art in the Hall of Fame!</p>
        
    <% } else if (prevState === "SELECTED"){ %>
    
        <p>The most aesthetic artists have been selected and Artto is waiting for a reply!</p>
        
    <% } else if (prevState === "SOLD"){ %>
    
        <p>One of the selected artists has sold their submission to the Artto Hall of Fame!</p>
    
    <% } else if (prevState === "KEPT"){ %>
    
        <p>All of the selected artists have chosen to keep their submissions!</p>
        
    <% } %>
    
    <hr>
    
    <h3>Current submission state:</h3>
    
    <% if(curState === "OPEN"){ %>
    
        <p>Artto is currently accepting submissions for the next selection!</p>
    
    <% } else if (curState === "SELECTING"){ %>
    
        <p>Artto is currently selecting the most aesthetic user submissions! No new submissions are accepted at this time.</p>
        
    <% } %>
    
    <hr>
    
    <h3>Submissions This Session</h3>
    <p id="subs">subcount</p>
    <script src="js/subCountAJAX.js">
    </script>
    
    <hr>
    
    <h3>Time Left</h3>
    <p id="time">timeleft</p>
    <script src="js/timeLeftAJAX.js">
    </script>
    
</div>

<% include partials/footer %>