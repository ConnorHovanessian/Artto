<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Change Password!</h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/changePassword"  method="POST">
                <div class="form-group">
                    <input required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,20}" title="6-20 characters with at least one lowercase letter, uppercase letter, and number." class="form-control" type="password" name="password" id="password" placeholder="password">
                </div>
                <div class="form-group">
                    <input required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,20}" title="Passwords do not match!" class="form-control" type="password" name="password_confirmation" id="password_confirmation" placeholder="confirm password">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Change!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/formValidation.js">
</script>

<% include ../partials/footer %>