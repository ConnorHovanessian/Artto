<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Make some art!!</h1>
        <h3 style="text-align: center;"><span id="time"></span> seconds left!</h3>
        <div style="width: 50%; margin: 25px auto;">
            <!-- where the widget goes -->
              
            <div class="my-drawing"></div>
        
            <!-- kick it off -->
            <script src="js/drawingApp.js">
            </script>
            
            
            <a href="/home">Go Back</a>
            
            <!-- hidden form to POST canvas data after timeout -->
            <form id="imageForm" action="/art/<%=currentUser._id%>" method="POST">
                <input id="img" class="invisible" type="text" name="img">
            </form>
            
        </div>
    </div>
</div>

